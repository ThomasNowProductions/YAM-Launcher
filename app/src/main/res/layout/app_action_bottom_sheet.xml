<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorOnSurface" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/pin"
            style="@style/ActionItem">

            <ImageView
                android:id="@+id/pinIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/keep_24px"
                android:contentDescription="@string/accessibility_pin"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/pinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/pin"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            style="@style/ActionItem">

            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/info_24px"
                android:contentDescription="@string/accessibility_info"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/infoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/info"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/uninstall"
            style="@style/ActionItem">

            <ImageView
                android:id="@+id/uninstallIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete_24px"
                android:contentDescription="@string/accessibility_uninstall"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/uninstallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/uninstall"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rename"
            style="@style/ActionItem">

            <ImageView
                android:id="@+id/renameIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_24px"
                android:contentDescription="@string/accessibility_rename"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/renameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/rename"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hide"
            style="@style/ActionItem">

            <ImageView
                android:id="@+id/hideIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/visibility_off_24px"
                android:contentDescription="@string/accessibility_hide"
                app:tint="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/hideLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hide"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
